<% if flash[:update] %>
  <p><%= flash[:update] %></p>
<% end %>
<% if flash[:sign_up] %>
  <p><%= flash[:sign_up] %></p>
<% end %>
<% if flash[:sign_in] %>
  <p><%= flash[:sign_in] %></p>
<% end %>

<div class="container">
  <div class ="row">
    <div class="col-xs-3">
    <h2>User Info</h2>
    <table class="table">
   <tr><%= attachment_image_tag @user, :profile_image, :fill, 100,100,format:'jpeg',class: "pull-left profile-img", fallback: "no_image.jpg" %></tr>
   <tr>
    <th>name:</th>
    <th><%= @user.name %></th>
   </tr>
   <tr>
    <th>introduction:</th>
    <th><%= @user.introduction %></th>
   <tr>
  </table>

  <div class="row">
    <%= link_to "", edit_user_path(current_user),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

    <!--新規投稿-->
    <h2>New book</h2>
<%= form_for(@book) do |f| %>


<div class = "new-title">
	<h4>Title</h4>
	<%= f.text_field :title, class: "book_title" %>
</div>

<div class="new-body">
	<h4>Opinion</h4>
	<%= f.text_area :body, class: "book_body" %>
</div>


	<!-- f.submit 'Create Book' -->
  <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-7" data-disable-with="Create Book">

</div>

<% end %>

</div>



<div class="container">
  <div class ="row">
    <div class="col-xs-9">

      <h2>Books</h2>

   <table class="table">

  <% @books.each do |book| %>
   <tr>

    <td><%= attachment_image_tag @user, :profile_image, :fill, 50,50,format:'jpeg',class: "pull-left profile-img", fallback: "no_image.jpg",size:'50x50' %></td>
    <td><%= link_to book.title, book_path(book) %></td>
    <td><%= book.body %></td>

   <tr>

    <% end %>
  </table>

  </div>
  </div>
</div>

</div>
</div>
