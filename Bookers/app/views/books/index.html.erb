<!--flash[:destroy]にメッセージが入っている場合のみ、それを出力する処理を書く-->
<% if flash[:destroy] %>
<div class="destroy-message">
	<p><%= flash[:destroy] %></p>
</div>
<% end %>

<div class="index-box">
<h1>Books</h1>

<!--テーブル表示-->
<table class="table">

<thred>

	<tr>
		<th>Title</th>
		<th>Body</th>
		<th></th>
	</tr>
</thred>

	<!-- eachは繰り返し処理 -->
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>

		<td><%= book.body %></td>

		<td><%= link_to 'show', book_path(book), class: "show_#{book.id}" %></td>

		<td><%= link_to 'edit', edit_book_path(book), class: "edit_#{book.id}" %></td>

		<td><%= link_to'destroy',book_path(book), class: "destroy_#{book.id}",method: :delete, "data-confirm" => "Are you sure?" %></td>
	</tr>
	<% end %>

</table>



<!--form_for部分-->
<!--新規投稿-->
<%= form_for(@book) do |f| %>

<div class="new-box">
	<h2>New book</h2>

<div class = "new-title">
	<h4>Title</h4>
	<%= f.text_field :title, class: "book_title" %>
</div>

<div class="new-body">
	<h4>Body</h4>
	<%= f.text_area :body, class: "book_body" %>
</div>

<div class="new-submit">
	<%= f.submit 'Create Book' %>
</div>

</div>

<% end %>

</div>